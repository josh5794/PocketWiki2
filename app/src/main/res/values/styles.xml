<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="theme_splash_activity_style" parent="AppTheme.NoActionBar" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
    </style>

    <style name="theme_activity_style_main" parent="AppTheme" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="actionBarStyle">@style/ActionBarStyleMain</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyleMain</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ActionBarStyleMain" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showCustom</item>
        <item name="background">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="theme_splash_activity_style.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="theme_splash_activity_style.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
